@model dynamic

<a class="d-inline-block" style="color: inherit;" asp-area="" asp-controller="Story" asp-action="Display" asp-route-id="@Model.stories.StoryModelId">
    <div class="shadow-sm position-relative m-3 p-4" style="cursor: pointer; min-height: 300px; width: 250px;">
        <h3 class="text-left">@Model.stories.StoryTitle</h3>
        <p class="mt-3 mb-3 text-right">@Model.stories.StoryHeadline</p>
        <div class="d-flex position-absolute" style="bottom: 0px; right: 15px;">
            @foreach (StoryGenresModel genre in Model.genres)
            {
                <p class="text-muted border pt-1 pb-1 pr-2 pl-2" style="font-size: 14px; border-radius: 100px;">@genre.StoryGenre</p>
            }
        </div>
    </div>
</a>