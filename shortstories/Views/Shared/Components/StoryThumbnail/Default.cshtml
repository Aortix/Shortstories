@model dynamic

<a class="d-inline-block home-link-container" asp-area="" asp-controller="Story" asp-action="Display" asp-route-id="@Model.stories.StoryModelId">
    <div class="shadow-sm position-relative m-3 p-4 home-main-container">
        <h3 class="text-left">@Model.stories.StoryTitle</h3>
        <p class="mt-3 mb-3 text-left">@Model.stories.StoryHeadline</p>
        <div class="d-flex position-absolute home-genre-container">
            @foreach (StoryGenresModel genre in Model.genres)
            {
                <p class="text-muted border pt-1 pb-1 pr-2 pl-2 mr-1 home-genre-text">@genre.StoryGenre</p>
            }
        </div>
    </div>
</a>