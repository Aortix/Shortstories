@{
}

    <div>
        <h1 class="mb-3">Register</h1>
        <form id="register_form">
            <div class="form-group">
                <label for="register_form_username">Username</label>
                <input type="text" id="register_form_username" name="register_form_username" class="form-control" placeholder="Username">
                <small id="usernameHelp" class="form-text text-muted">Alphanumeric characters and underlines only.</small>
            </div>
            <div class="form-group">
                <label for="register_form_email_address">Email address</label>
                <input type="email" id="register_form_email_address" name="register_form_email_address" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="register_form_password">Password</label>
                <input type="password" id="register_form_password" name="register_form_password" class="form-control" placeholder="Password">
                <small id="passwordHelp" class="form-text text-muted">Must be at least 6 characters.</small>
            </div>
            <div class="form-group">
                <label class="d-block">Avatar</label>
                <img class="register-chosen-avatar register-avatar border p-2 m-1" style="height: 80px; width: 80px; cursor: pointer;" src="~/images/animal-kingdom.png" alt="animal-kingdom" />
                <img class="register-avatar p-2 m-1" style="height: 80px; width: 80px; cursor: pointer;" src="~/images/cat.png" alt="cat" />
                <img class="register-avatar p-2 m-1" style="height: 80px; width: 80px; cursor: pointer;" src="~/images/pet-shop.png" alt="pet-shop" />
                <img class="register-avatar p-2 m-1" style="height: 80px; width: 80px; cursor: pointer;" src="~/images/slow.png" alt="slow" />
                <div class="text-muted">Icons made by <a href="https://www.flaticon.com/authors/vitaly-gorbachev" title="Vitaly Gorbachev">Vitaly Gorbachev</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
            </div>
            <div  class="form-group">
                <label for="register_form_profession">What kind of writer would you consider yourself?</label>
                <select multiple class="form-control" id="register_form_profession" name="register_form_profession">
                    <option>Beginner</option>
                    <option>Hobbyist</option>
                    <option>Enthusiast</option>
                    <option>Professional</option>
                </select>
            </div>
            <div class="form-group">
                <label for="register_form_description">Short description about you</label>
                <textarea class="form-control" id="register_form_description" name="register_form_description" rows="3" placeholder="Optional"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>