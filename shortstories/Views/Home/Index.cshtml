@{
    ViewData["Title"] = "Home Page";
}

@model dynamic
    <div class="text-center">
        <h1 class="display-4 mt-4 mb-4">Shortstories</h1>
        <a class="btn btn-primary" asp-controller="Story" asp-action="Create">Add Story</a>
        <div class="border-bottom text-left">
            <h5 class="d-inline-block position-relative text-muted" style="left: 10px;">Followers</h5>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            @for (int i = 0; i < Model.stories.Count; i++)
            {
                @await Component.InvokeAsync("StoryThumbnail", new { storyData = Model.stories[i], genreData = Model.genres[i] })
            }
        </div>
        <div class="border-bottom dropdown text-left">
            <div class="dropdown-toggle position-relative text-muted mb-2" style="font-size: 20px; left: 10px;" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Random
            </div>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <a class="dropdown-item" href="#">Something else here</a>
            </div>
        </div>
    </div>
