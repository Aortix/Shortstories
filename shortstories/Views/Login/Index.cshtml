<div>
    <h1 class="mb-3">Login</h1>
    <form>
        <div class="form-group">
            <label for="input_form_email_address">Email address</label>
            <input type="email" id="input_form_email_address" name="input_form_email_address" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="input_form_password">Password</label>
            <input type="password" id="input_form_password" name="input_form_password" class="form-control" placeholder="Password">
        </div>
        <button type="button" class="btn btn-primary" onclick="firebaseSignInWithEmailAndPassword()">Submit</button>
    </form>
</div>